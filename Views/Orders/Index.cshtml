@model IEnumerable<CoreReactLab.Models.Order>

@{
    Layout = "_Layout";
}

<p>
    <a asp-action="Create">Добавить новый заказ</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.worker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.typeWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.worker.FIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.typeWork.NameWork)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Информация</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
